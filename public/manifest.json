{
  "manifest_version": 3,
  "name": "Translator Extension",
  "version": "1.0",
  "description": "Translate English to Farsi instantly.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
